<UserControl x:Class="AdvertManager.Client.Views.PublishersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdvertManager.Client.Views"
             xmlns:viewModels="clr-namespace:AdvertManager.Client.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="850">

    <UserControl.DataContext>
        <viewModels:PublishersViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Column="0"
          AutoGenerateColumns="False"
          ItemsSource="{Binding PublishersView}"
          SelectedItem="{Binding SelectedPublisher}"
          IsReadOnly="True"
          Margin="10"
          SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn Header="Contact Number" Binding="{Binding ContactNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Column="1" Margin="5">
            <TextBlock Text="Add New Publisher" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="First Name:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding NewPublisher.FirstName, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,10"/>

            <TextBlock Text="Last Name:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding NewPublisher.LastName, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,10"/>

            <TextBlock Text="Contact Number:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding NewPublisher.ContactNumber, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,15"/>

            <Button Content="Add" Command="{Binding AddEntityCommand}" IsEnabled="{Binding CanAdd}"
                    Margin="0, 5"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"
                       TextWrapping="Wrap" Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
