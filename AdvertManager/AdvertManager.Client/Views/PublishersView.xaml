<UserControl x:Class="AdvertManager.Client.Views.PublishersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdvertManager.Client.Views"
             xmlns:viewModels="clr-namespace:AdvertManager.Client.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:PublishersViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="1" Grid.Column="0"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding PublishersView}"
                  SelectedItem="{Binding SelectedPublisher}"
                  IsReadOnly="True"
                  Margin="10"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn Header="Contact Number" Binding="{Binding ContactNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
            <Button Content="Add" Command="{Binding AddEntityCommand}" Margin="0,5"/>
        </StackPanel>
    </Grid>
</UserControl>