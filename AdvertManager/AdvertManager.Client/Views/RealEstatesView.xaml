<UserControl x:Class="AdvertManager.Client.Views.RealEstatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdvertManager.Client.Views"
             xmlns:viewModels="clr-namespace:AdvertManager.Client.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:RealEstatesViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Grid.Column="0"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding RealEstatesView}"
                  SelectedItem="{Binding SelectedRealEstate}"
                  IsReadOnly="True"
                  Margin="10"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Area (m²)" Binding="{Binding AreaInSquareMeters}" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                <DataGridTextColumn Header="Year Built" Binding="{Binding YearBuilt}" Width="*" />
                <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" Width="*" />
                <DataGridTextColumn Header="City" Binding="{Binding Location.City}" Width="*" />
                <DataGridTextColumn Header="Country" Binding="{Binding Location.Country}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
            <Button Content="Add" Command="{Binding AddEntityCommand}" Margin="0,5"/>
        </StackPanel>
    </Grid>
</UserControl>