<UserControl x:Class="AdvertManager.Client.Views.RealEstatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:AdvertManager.Client.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="850">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <!-- DataGrid -->
        <DataGrid Grid.Column="0"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding RealEstatesView}"
                  SelectedItem="{Binding SelectedRealEstate}"
                  Margin="10"
                  SelectionMode="Single"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30"/>
                <DataGridTextColumn Header="Area (m²)" Binding="{Binding AreaInSquareMeters}" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                <DataGridTextColumn Header="Year Built" Binding="{Binding YearBuilt}" Width="*" />
                <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" Width="*" />
                <DataGridTextColumn Header="City" Binding="{Binding Location.City}" Width="*" />
                <DataGridTextColumn Header="Country" Binding="{Binding Location.Country}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form -->
        <StackPanel Grid.Column="1" Margin="5, 0, 15, 0">
            <TextBlock Text="Add New Real Estate" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Area (m²):" Margin="0,5,0,2"/>
            <TextBox Text="{Binding AreaInput, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Type:" Margin="0,5,0,2"/>
            <ComboBox ItemsSource="{Binding RealEstateTypes}" 
                      SelectedItem="{Binding FormRealEstate.Type}" Margin="0,0,0,10"/>

            <TextBlock Text="Year Built:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding YearBuiltInput, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Available:" Margin="0,5,0,2"/>
            <CheckBox IsChecked="{Binding FormRealEstate.IsAvailable}" Margin="0,0,0,15"/>

            <TextBlock Text="Location:" Margin="0,5,0,2"/>
            <ComboBox ItemsSource="{Binding Locations}" 
              SelectedItem="{Binding FormRealEstate.Location}" 
              Margin="0,0,0,15">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} - {1}">
                                        <Binding Path="Id"/>
                                        <Binding Path="Street"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Content="Add" Command="{Binding AddCommand}" Margin="0,5"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"
           TextWrapping="Wrap"
           Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        </StackPanel>
    </Grid>
</UserControl>
