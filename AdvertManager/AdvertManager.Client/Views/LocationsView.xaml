<UserControl x:Class="AdvertManager.Client.Views.LocationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdvertManager.Client.Views"
             xmlns:viewModels="clr-namespace:AdvertManager.Client.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="850">

    <UserControl.DataContext>
        <viewModels:LocationsViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <DataGrid Grid.Column="0"
          AutoGenerateColumns="False"
          ItemsSource="{Binding LocationsView}"
          SelectedItem="{Binding SelectedLocation}"
          IsReadOnly="True"
          Margin="10"
          SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30"/>
                <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*" />
                <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="*" />
                <DataGridTextColumn Header="Postal Code" Binding="{Binding PostalCode}" Width="*" />
                <DataGridTextColumn Header="Street" Binding="{Binding Street}" Width="*" />
                <DataGridTextColumn Header="Street Number" Binding="{Binding StreetNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Column="1" Margin="5">
            <TextBlock Text="Add New Location" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="City:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding NewLocation.City, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Country:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding NewLocation.Country, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Postal Code:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding NewLocation.PostalCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Street:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding NewLocation.Street, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <TextBlock Text="Street Number:" Margin="0,5,0,2"/>
            <TextBox Text="{Binding NewLocation.StreetNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

            <Button Content="Add" Command="{Binding AddEntityCommand}" IsEnabled="{Binding CanAdd}"
                    Margin="0, 5"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"
                       TextWrapping="Wrap" Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
